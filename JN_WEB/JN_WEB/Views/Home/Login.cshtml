@model Usuario
@{
	Layout = "_LayoutExterno";
}
<div class="col-lg-4 col-12"></div>
<div class="col-lg-4 col-12">

	<h3 class="mb-4 pb-2 text-center">Inicio de Sesión</h3>

	<form asp-action="Login" asp-controller="Home" class="custom-form contact-form" role="form">
		<div class="row">
			<div class="col-lg-12  col-12">
				<div class="form-floating">
					<input type="text" asp-for="Indentificacion" class="form-control" placeholder="Name" required="">
					<label for="floatingInput">Identificacion</label>
				</div>
			</div>

			<div class="col-lg-12 col-12">
				<div class="form-floating">
					<input type="password" asp-for="Contrasenna" class="form-control" placeholder="Name" required="">

					<label for="floatingInput">Contraseña</label>
				</div>
			</div>
			<div class="col-lg-6 col-12">
				<button type="submit" class="form-control">Procesar</button>
			</div>
			<div class="col-12 text-center mt-4">
				<a asp-controller="Home" asp-action=""  class="text-white">
					No tiene una cuenta?
				</a>
				</div>

				<div class="col-12 text-center mt-2">
				<a asp-controller="Home" asp-action="" class="text-white">
					Olvido su contraseña?
				</a>
			</div>

		</div>
	</form>
</div>

